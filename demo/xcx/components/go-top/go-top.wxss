/* 购物车icon */
.icon {
  position: absolute;
  top: 0;
  left: 0;
  width: 110rpx;
  height: 110rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 10rpx 0 rgba(0, 0, 0, .12);
  z-index: 2;
}
.icon .img {
  width: 50rpx;
  height: 50rpx;
}
.icon .t {
  color: #666;
  font-size: 20rpx;
}